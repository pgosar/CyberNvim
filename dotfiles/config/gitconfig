[user]
	name = pgosar
	email = pgosarsteam@gmail.com
[color]
	# enable colors
	ui = auto
[core]
	# default editor
	editor = vim
	# trailing whitespace doesn't cause merge conflicts
	whitespace = -trailing-space
[credential "https://github.com"]
	helper = 
	helper = !/usr/bin/gh auth git-credential
[diff]
  # more descriptive initials
  mnemonicPrefix = true
  # Show renames/moves
  renames = true
  # regex with word diff
  wordRegex = .
  # show submodule-related information
  submodule = log
  #  VSCode as default diff tool
  tool = vscode
[difftool "vscode"]
  cmd = code --wait --diff $LOCAL $REMOTE
[grep]
  break = true
  heading = true
  lineNumber = true
[log]
  # Use abbrev SHAs
  abbrevCommit = true
  # Automatically --follow when given a single path
  follow = true
  # Disable decorate for reflog
  decorate = false
[merge]
	ff = false
[mergetool]
  # Clean up backup files
  keepBackup = false
  # Clean up temp files
  keepTemporaries = false
  # Put the temp files in a dedicated dir
  writeToTemp = true
  # Auto-accept file prompts when launching merge tools
  prompt = false
[fetch]
  # Auto-fetch submodule changes
  recurseSubmodules = on-demand
[push]
	# only pushes current branch to target regardless of remote name
	default = upstream
	# push tags ttoo
	followTags = true
[status]
  # Display submodule rev change summaries in status
  submoduleSummary = true
  # recursively shows all untracked files
  showUntrackedFiles = all
[color "branch"]
  # chang color to cyan
  upstream = cyan
[tag]
  # Sort tags as version numbers
  sort = version:refname[status]
	subModuleSummary = true
	showUntrackedFiles = all